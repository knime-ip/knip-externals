<!-- build an update site -->
<project>
	<modelVersion>4.0.0</modelVersion>

	<properties>
		<tycho-version>0.22.0</tycho-version>
	</properties>

	<parent>
		<groupId>org.knime.knip</groupId>
		<artifactId>knip-externals</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>%(GROUP)</groupId>
	<artifactId>%(NAME)</artifactId>
	<version>1.0.0</version>

	<!-- we want to build an update site -->
	<packaging>eclipse-repository</packaging>

	<repositories>
		<repository>
			<id>knimeTrunk</id>
			<layout>p2</layout>
			<url>https://update.knime.org/analytics-platform/nightly/</url>
		</repository>
	</repositories>

%(DEPENDENCIES)

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<includeAllDependencies>true</includeAllDependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<!-- this line tells tycho to search maven dependencies for the osgi 
						bundles/eclipse plugins -->
					<pomDependencies>consider</pomDependencies>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

